<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_giris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/default_bg"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.yunus.ototakip.Giris">


    <!-- Email Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textInputLayout2"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/beyaz">

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:hint="E-posta"
            android:inputType="textEmailAddress"
            android:textColor="@color/beyaz"
            android:textColorHint="@color/beyaz" />
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSignin"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:textColorHint="@color/beyaz">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_key_black_24dp"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:textColor="@color/beyaz"
            android:textColorHint="@color/beyaz" />
    </android.support.design.widget.TextInputLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonSignin"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@color/koyu_sari"
        fancy:fb_borderColor="@color/koyu_sari"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/koyu_sari"
        fancy:fb_focusColor="@color/koyu_sari"
        fancy:fb_radius="6dp"
        fancy:fb_text="GİRİŞ YAP"
        fancy:fb_textColor="@color/beyaz"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/facebookBaglan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        android:text="Hesabınız yok mu? Kaydolun!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/beyaz"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewSifreUnuttum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        android:text="Şifreni mi unuttun?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/beyaz"
        android:layout_alignBottom="@+id/textViewSignUp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewSignUp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/facebookBaglan"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="#3b5998"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#3b5998"
        fancy:fb_focusColor="#3b5998"
        fancy:fb_radius="6dp"
        fancy:fb_iconResource="@drawable/icon_facebook"
        fancy:fb_text="Facebook ile giriş yap"
        fancy:fb_textColor="@color/beyaz"
        fancy:fb_iconPosition="left"
        fancy:fb_iconPaddingTop="12dp"
        fancy:fb_iconPaddingRight="12dp"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/textViewSignUp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
    </mehdi.sakout.fancybuttons.FancyButton>

</RelativeLayout>