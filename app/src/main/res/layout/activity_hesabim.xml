<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yunus.ototakip.Hesabim">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayoutHesabim"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_hesabim"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back_24dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/beyaz"
        app:subtitleTextColor="@color/beyaz"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hesabım"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHesabim"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/appBarLayoutHesabim"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/kullaniciHesapResmi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kullanici_pp"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp"
        android:layout_below="@+id/toolbar_hesabim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <TextView
        android:id="@+id/kullaniciHesapAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kullaniciHesapResmi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:text="Oto Takip Kullanıcısı"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kullaniciHesapMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kullaniciHesapAd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="yunushaznedar@gmail.com"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonSifreDegistir"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="30dp"
        fancy:fb_text="Şifre Değiştir"
        fancy:fb_textColor="@color/beyaz"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/kullaniciHesapMail"
        android:layout_alignStart="@+id/kullaniciHesapResmi"
        android:layout_marginTop="34dp"
        android:layout_alignEnd="@+id/kullaniciHesapResmi">
    </mehdi.sakout.fancybuttons.FancyButton>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonHesapGuncelle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="30dp"
        fancy:fb_text="Bilgilerimi Güncelle"
        fancy:fb_textColor="@color/beyaz"
        android:layout_below="@+id/buttonSifreDegistir"
        android:layout_alignStart="@+id/buttonSifreDegistir"
        android:layout_marginTop="23dp"
        android:layout_alignEnd="@+id/buttonSifreDegistir">
    </mehdi.sakout.fancybuttons.FancyButton>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonHesapSil"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="30dp"
        fancy:fb_text="Hesabı Sil"
        fancy:fb_textColor="@color/beyaz"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/buttonHesapGuncelle"
        android:layout_alignStart="@+id/buttonHesapGuncelle"
        android:layout_alignEnd="@+id/buttonHesapGuncelle">
    </mehdi.sakout.fancybuttons.FancyButton>



</RelativeLayout>
