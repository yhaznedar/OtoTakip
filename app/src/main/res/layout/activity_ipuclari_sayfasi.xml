<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ipuclari_sayfasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/introkirmizi"
    tools:context="com.example.yunus.ototakip.IpuclariSayfasi">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">
        <ImageButton
            android:id="@+id/imageButtonTraffic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/sari"
            app:srcCompat="@drawable/trafficback" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:id="@+id/linearLayout6"
            android:layout_above="@+id/linearLayout7"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/imageButtonAid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout7"
                android:layout_alignParentStart="true"
                android:background="@color/introkirmizi"
                app:srcCompat="@drawable/aid" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <ImageButton
            android:id="@+id/imageButtonEngine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            app:srcCompat="@drawable/engineback" />

    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarIpuclari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_ipuclari"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/back_24dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextColor="@color/beyaz"
        app:titleTextColor="@color/beyaz" />

    <TextView
        android:id="@+id/textViewIpuclari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarIpuclari"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="İpuçları"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:textStyle="normal|bold" />


</RelativeLayout>
