<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_arac_ekle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    tools:context="com.example.yunus.ototakip.AracEkle"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarAracEkleLayout">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_aracekle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back_24dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/beyaz"
        app:subtitleTextColor="@color/beyaz"
        android:layout_alignBottom="@+id/appBarAracEkleLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_below="@+id/imageView2"
        android:fontFamily="sans-serif"
        android:text="Aracınıza ait birkaç bilgiyi topluyoruz!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <View
        android:id="@+id/cizgi"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textView3"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/appBarAracEkleLayout"
        android:background="@android:color/black" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Plaka"
        android:ems="10"
        android:drawablePadding="5dp"
        android:id="@+id/editText"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_plaka"
        android:inputType="text"
        android:hint="Model"
        tools:text="textPlaka"
        tools:layout_editor_absoluteY="205dp"
        tools:layout_editor_absoluteX="56dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Kasko Tarihi"
        android:ems="10"
        android:id="@+id/editText2"
        android:drawablePadding="5dp"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_calendar_24dp"
        android:hint="Model"
        android:inputType="text"
        tools:text="textKaskoTarihi"
        tools:layout_editor_absoluteY="465dp"
        tools:layout_editor_absoluteX="56dp"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:text="Emisyon Tarihi"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_calendar_24dp"
        android:inputType="text"
        android:hint="Model"
        android:drawablePadding="5dp"
        tools:text="textEmisyonTarihi"
        android:layout_height="40dp"
        android:layout_width="300dp"
        tools:layout_editor_absoluteY="332dp"
        tools:layout_editor_absoluteX="56dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_height="40dp"
        android:text="Muayene Tarihi"
        android:ems="10"
        android:drawablePadding="5dp"
        android:id="@+id/editText6"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_calendar_24dp"
        android:inputType="text"
        android:hint="Model"
        tools:text="textMuayeneTarihi"
        android:layout_width="300dp"
        tools:layout_editor_absoluteY="402dp"
        tools:layout_editor_absoluteX="56dp"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="300dp"
        android:text="Sigorta Tarihi"
        android:drawablePadding="5dp"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_calendar_24dp"
        android:inputType="text"
        android:hint="Model"
        tools:text="textSigortaTarihi"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="536dp"
        tools:layout_editor_absoluteX="53dp"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Model"
        android:ems="10"
        android:drawablePadding="5dp"
        android:id="@+id/editText3"
        android:background="@color/beyaz"
        android:drawableLeft="@drawable/ic_plaka"
        android:inputType="text"
        android:hint="Model"
        tools:text="textModel"
        tools:layout_editor_absoluteY="268dp"
        tools:layout_editor_absoluteX="56dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText2" />

    <ImageView
        android:layout_width="82dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/ic_car_24dp"
        android:id="@+id/imageView2"
        tools:layout_editor_absoluteY="52dp"
        tools:layout_editor_absoluteX="165dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar_aracekle" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonSil"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="@color/sari"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/sari"
        fancy:fb_focusColor="@color/sari"
        fancy:fb_radius="10dp"
        fancy:fb_text="ARACI SİL"
        fancy:fb_textColor="@color/beyaz"
        tools:layout_editor_absoluteY="641dp"
        tools:layout_editor_absoluteX="226dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/myCoordinatorLayout"
        android:layout_alignStart="@+id/editText4">
    </mehdi.sakout.fancybuttons.FancyButton>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonGuncelle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        fancy:fb_borderColor="@color/sari"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/sari"
        fancy:fb_focusColor="@color/sari"
        fancy:fb_radius="10dp"
        fancy:fb_text="GÜNCELLE"
        fancy:fb_textColor="@color/beyaz"
        tools:layout_editor_absoluteY="641dp"
        tools:layout_editor_absoluteX="86dp"
        android:layout_alignTop="@+id/buttonSil"
        android:layout_alignEnd="@+id/editText4" />

    <TextView
        android:text="Araç Ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAracEkle"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_alignBottom="@+id/appBarAracEkleLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_height="50dp"
        android:id="@+id/myCoordinatorLayout"
        android:layout_width="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
